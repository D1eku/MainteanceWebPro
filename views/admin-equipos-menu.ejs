                        <div id="text-action-title-popup">
                            Editar Equipo
                        </div>
                    </h3>
                </div>
                <div class="col-12">
                    <form action="/editar-equipo-admin" method="post">
                        <div class="row">
                            <div class="col-12">
                                <div class="input-group flex-nowrap">
                                    <span class="input-group-text" id="addon-wrapping">Codigo</span>
                                    <input id="edit_cod_equipo_input_popup" name="code_edit_equipo" type="text" class="form-control" placeholder="Codigo Equipo" aria-label="cod_equipo_add" aria-describedby="addon-wrapping" readonly>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="input-group flex-nowrap">
                                    <span class="input-group-text" id="addon-wrapping">Nombre Equipo</span>
                                    <input id="edit_name_equipo_input_popup" name="name_edit_equipo" type="text" class="form-control" placeholder="Nombre Equipo" aria-label="name_equipo_add" aria-describedby="addon-wrapping">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="input-group flex-nowrap">
                                    <span class="input-group-text" id="addon-wrapping">Clase</span>
                                    <input id="edit_clase_equipo_input_popup" name="clase_edit_equipo" type="text" class="form-control" placeholder="Clase" aria-label="clase_equipo_add" aria-describedby="addon-wrapping">
