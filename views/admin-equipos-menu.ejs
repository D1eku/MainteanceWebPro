    <!-- Agregar nuevo equipo Form oculto -->
    <div class="bg-modal2">
        <div class="modal-content2">
            <div class="row">
                <div class="col-12">
                    <h3>
                        <div id="text-action-title-popup">
                            Nuevo Equipo
                        </div>
                    </h3>
                </div>
                <div class="col-12">
                    <form action="/add-new-equipo-admin" method="post">
                        <div class="row">
                            <!-- Codigo nuevo equipo -->
                            <div class="col-12">
                                <div class="input-group flex-nowrap">
                                    <span class="input-group-text" id="addon-wrapping">Codigo</span>
                                    <input id=codigo_equipo_input_popup  name="code_new_equipo" type="text" class="form-control" placeholder="Codigo Equipo"
                                        aria-label="codigo_equipo_add" aria-describedby="addon-wrapping">
                                </div>
                            </div>
                            <!-- Nombre nuevo equipo -->
                            <div class="col-12">
                                <div class="input-group flex-nowrap">
                                    <span class="input-group-text" id="addon-wrapping">Nombre</span>
                                    <input id=nombre_equipo_input_popup name="nombre_new_equipo" type="text" class="form-control" placeholder="Nombre Equipo"
                                        aria-label="nombre_equipo_add" aria-describedby="addon-wrapping">
                                </div>
                            </div>
                            <!-- Clase nuevo equipo -->
                            <div class="col-12">
                                <div class="input-group flex-nowrap">
                                    <span class="input-group-text" id="addon-wrapping">Clase</span>
                                    <input id=clase_equipo_input_popup name="clase_new_equipo" type="text" class="form-control" placeholder="Clase Equipo"
                                        aria-label="clase_equipo_add" aria-describedby="addon-wrapping">
                                </div>
                            </div>
                            <!-- Descripcion nuevo equipo -->
                            <div class="col-12">
                                <div class="input-group flex-nowrap">
                                    <span class="input-group-text" id="addon-wrapping">Descripcion</span>
                                    <input id=desc_equipo_input_popup name="desc_new_equipo" type="text" class="form-control" placeholder="Descripcion Equipo"
                                        aria-label="desc_equipo_add" aria-describedby="addon-wrapping">
                                </div>
                            </div>
                            <!-- Estado nuevo equipo -->
                            <div class="col-12">
                                <div class="input-group flex-nowrap">
                                    <span class="input-group-text" id="addon-wrapping">Estado</span>
                                    <select id="estado_new_equipo" name="estado_equipo_add" class="form-select" aria-label="Default select example">
                                        <option selected>Activado</option>
                                        <option value="1">Desactivado</option>
                                    </select>
                                </div>
                            </div>
                            <!-- Ubicacion nuevo equipo -->
                            <div class="col-12">
                                <div class="input-group flex-nowrap">
                                    <span class="input-group-text" id="addon-wrapping">Ubicacion</span>
                                    <input id=ubicacion_equipo_input_popup name="ubicacion_new_equipo" type="text" class="form-control" placeholder="Ubicacion Equipo"
